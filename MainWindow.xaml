<Window x:Class="GameOfLifeTwoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLifeTwoWPF"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="600" Width="600" ResizeMode="NoResize">
    <Grid>
        <Canvas x:Name="golCanvas" HorizontalAlignment="Center" Height="500" VerticalAlignment="Top" Width="500" Margin="0,20,0,0">
        </Canvas>
        <Button Content="Next" HorizontalAlignment="Left" Margin="119,530,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="199,530,0,0" VerticalAlignment="Top" Width="75" Click="BtnStart_Click"/>
        <Slider x:Name="sldrSpeed" Canvas.Left="231" Canvas.Top="517" Width="268" Margin="278,530,46,-536" SmallChange="1" ValueChanged="Slider_ValueChanged"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="39,530,0,0" Click="BtnClear_Click"/>

    </Grid>
</Window>
